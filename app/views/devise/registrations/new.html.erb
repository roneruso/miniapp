<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <!-- <div class="field"> -->
  <div class="input-field col s12">
    <label for="first_name">Name(6 characters maximum)</label>
    <%= f.text_field :nickname, autofocus: true, maxlength: "6" %>
  </div>

  <!-- <div class="field"> -->
  <div class="input-field col s12">
    <label for="email">Email</label>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <!-- <div class="field"> -->
        <div class="input-field col s12">
          <label for="password">Password(6 characters maximum)</label>

    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <!-- <div class="field"> -->
        <div class="input-field col s12">
          <label for="password">Password_confirmation</label>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
